<div class='container'>
 <div class="card">
   <div class="card-header">
   <h1>Info about task</h1>
   </div>
   <div class="card-body">
   <p class="card-title"> Title: <%= @task.title %> </p>
   <p class="card-text"> Detail: <%= @task.detail %> </p>
   <p class="form-group form-check checkbox"> Completed: <%= @task.completed %> </p>

   <p type="button" class="btn btn-link"><%= link_to 'Edit this task', edit_task_path(@task) %></p>
   <p type="button" class="btn btn-link">
   <%= link_to 'Remove this task', task_path(@task), method: :delete, data: { confirm: "Are you sure?" } %>
   </p>
   <p type="button" class="btn btn-link"><%= link_to 'Back to tasks list', tasks_path %></p>
 </div>
 </div>
</div>
