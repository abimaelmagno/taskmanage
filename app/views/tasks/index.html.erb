<div class='container'>
<h1>List of tasks</h1>

<ul class="list-group">
<% @tasks.each do |task| %>
  <li class="list-group-item list-group-item-dark"><%= link_to task.title, task_path(task)%></li>
<% end %>
</ul>

<p type="button" class="btn btn-link"><%= link_to 'Create a new task', new_task_path %></p>
</div>